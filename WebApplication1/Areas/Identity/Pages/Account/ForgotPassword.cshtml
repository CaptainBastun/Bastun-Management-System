@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<h3 class="text-center">Password recovery</h3>
<br />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post" asp-area="Identity" asp-page="/Account/ForgotPassword" asp-route-returnUrl="@Model.Url">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
