@page
@model RegisterModel
@{
    this.ViewData["Title"] = "Register";
}


<h3 class="text-center">Register</h3>
<br />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-area="Identity" asp-page="/Account/Register">
            <div class="form-group">
                <input asp-for="Input.UserName" class="form-control" placeholder="Username"/>
                <span asp-validation-for="Input.UserName"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Password confirmation"/>
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
