@{ 
    this.ViewData["Title"] = "Add inbound messages";
}
@using BMS.Models;
@model MessageInputModel 
@if (TempData["Error"] != null)
{
    @await Component.InvokeAsync("ErrorAlert", new {message = TempData["Error"]})
}
<div class="col">
    <form id="ldmForm" asp-controller="Messages" asp-action="InboundLDM">
        <div class="form-group">
            <label>Inbound LDM:</label>
            <textarea asp-for="@Model.Message" class="form-control w-100" rows="3"></textarea>
            <span asp-validation-for="@Model.Message"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.OpsEmail" class="form-control" placeholder="Enter ops email to send movement to" />
            <span asp-validation-for="@Model.OpsEmail"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</div>
<br />