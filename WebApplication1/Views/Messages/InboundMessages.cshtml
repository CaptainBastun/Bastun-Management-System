@using BMS.Models.MessagesInputModels.InboundMessagesInputModels
@model InboundMessageInputModel 
<div class="col">
    <form id="ldmForm" asp-controller="Messages" asp-action="InboundLDM">
        <div class="form-group">
            <label>Inbound LDM:</label>
            <textarea asp-for="@Model.LDMMessage" class="form-control w-100" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</div>
<br />
<hr />
<br />
