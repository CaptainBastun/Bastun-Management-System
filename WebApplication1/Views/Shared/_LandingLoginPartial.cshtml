@using  BMS.Models;
@model  LoginUserInputModel
<div class="col">
    <button id="loginButton" type="button" class="btn btn-lg w-100" onclick="showHideLoginForm()">Display</button>
    <form id="loginForm" class="form-group">
        <div class="form-group">
            <input asp-for="@Model.UserName" class="form-control w-75" placeholder="Username..."/>
            <span asp-validation-for="@Model.UserName"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.Password" class="form-control w-75" placeholder="Password..." />
            <span asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group">
            <input id="rememberMeCheckbox" asp-for="@Model.RememberMe" class="form-check-inline w-auto"/>
            <label class="form-check-inline">Remember me?</label>
        </div>
        <button id="loginSubmitButton" type="submit" class="w-100 btn btn-lg">Login</button>
    </form>
</div>
<script src="~/js/ShowHideLoginForm.js"></script>
