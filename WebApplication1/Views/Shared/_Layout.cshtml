<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DMOME</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">DMOME</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href=# role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Movements
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Movements" asp-action="Arrival">Arrival</a>
                                <a class="dropdown-item" asp-controller="Movements" asp-action="Departure">Departure</a>
                                <a class="dropdown-item" asp-controller="Messages" asp-action="InboundMessages">Inbound Messages</a>
                                <a class="dropdown-item" asp-controller="Messages" asp-action="OutboundMessages">Outbound Messages</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Fuel" asp-action="FuelForm">Fuel Form</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Weight" asp-action="WeightAndBalanceForm">Weight Form</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href=# role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                PAX Handling
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="PAX" asp-action="Register">Register</a>
                                <a class="dropdown-item" asp-controller="PAX" asp-action="Remove">Remove</a>
                                <a class="dropdown-item" asp-controller="PAX" asp-action="Edit">Edit</a>
                                <a class="dropdown-item" asp-controller="PAX" asp-action="Display">Display A/C</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href=# role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Operations
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item">Loading Instruction</a>
                                <a class="dropdown-item">Loadsheet</a>
                                <a class="dropdown-item">PAX Manifest</a>
                                <a class="dropdown-item">Departure Control</a>
                            </div>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center bg-dark text-white-50">
        <div class="container">
             &copy; Bastun Design Studios - 2020
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    
</body>
</html>
