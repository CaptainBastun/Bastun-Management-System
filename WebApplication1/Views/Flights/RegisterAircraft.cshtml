@{
    ViewData["Title"] = "RegisterAircraft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BMS.Models;
@model AircraftInputModel
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form asp-controller="Flights" asp-action="RegisterAircraft">
                <div class="form-group">
                    <label>Flight number:</label>
                    <input asp-for="@Model.FlightNumber" type="text" class="form-control w-100" />
                    <span asp-validation-for="@Model.FlightNumber" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label >Aircraft type:</label>
                    <input asp-for="@Model.Type" type="text" class="form-control w-100"/>
                    <span asp-validation-for="@Model.Type" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label>Aircraft registration:</label>
                    <input asp-for="@Model.AircraftRegistration" type="text" class="form-control w-100"/>
                    <span asp-validation-for="@Model.AircraftRegistration" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label>Aircraft version:</label>
                    <input asp-for="@Model.Version" type="text" class="form-control w-100"/>
                    <span asp-validation-for="@Model.Version" class="alert-danger"></span>
                </div>
                <button type="submit" class="btn btn-lg btn-primary w-100">Register aircraft</button>
            </form>
        </div>
    </div>
</div>

