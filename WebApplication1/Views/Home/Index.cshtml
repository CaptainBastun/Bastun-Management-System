@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-primary btn-lg" id="registerButton" onclick="displayRegisterFlight()">Add flight</button>
            <br />
            <form asp-controller="Flight" asp-action="Register" id="flightToAdd" style="display:none">
                <div class="form-group">
                    <label for="flightNumber">Flight number:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="acReg">A/C registration:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="A/C Type">A/C type:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="acConfig">A/C configuration:</label>
                    <input type="text"  class="form-control w-50"/>
                </div>
                <div class="form-group">
                    <label for="Origin">Origin:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="Destination">Destination:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="STA">STA:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="STD">STD:</label>
                    <input type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label for="bookedPax">Booked PAX:</label>
                    <input type="number" class="form-control w-50" />
                </div>
                <button type="submit" class="btn btn-primary w-50">Register flight</button>
            </form>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary float-right btn-lg table-responsive" id="displayButton" onclick="changeDisplayButtonContent()">Display daily</button>
            <table class="table table-bordered table-hover text-center" id="dailyMovements" style="display:none">
                <thead class="thead-dark ">
                    <tr>
                        <th scope="col">Flight Number</th>
                        <th scope="col">A/C Registration</th>
                        <th scope="col">A/C Type</th>
                        <th scope="col">Origin</th>
                        <th scope="col">Destination</th>
                        <th scope="col">STA</th>
                        <th scope="col">STD</th>
                        <th scope="col">Stand</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/js/site.js">

</script>
