@{
    ViewData["Title"] = "Home Page";
}
@using BMS.Models;
@model FlightInputModel
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-primary btn-lg" id="registerButton" onclick="displayRegisterFlight()">Add flight</button>
            <br />
            <form asp-controller="Home" asp-action="RegisterFlight" id="flightToAdd" style="display:none">
                <div class="form-group">
                    <label>Flight number:</label>
                    <input asp-for="@Model.FlightNumber"  type="text" class="form-control w-50" />
                    <span asp-validation-for="@Model.FlightNumber"></span>
                </div>
                <div class="form-group">
                    <label >A/C registration:</label>
                    <input type="text" asp-for="@Model.AircraftRegistration" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label>A/C type:</label>
                    <input asp-for="@Model.ACType" type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label>Version:</label>
                    <input asp-for="@Model.Version" type="text"  class="form-control w-50"/>
                </div>
                <div class="form-group">
                    <label >Origin:</label>
                    <input asp-for="@Model.Origin" type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label>Destination:</label>
                    <input asp-for="@Model.Destination" type="text" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label>STA:</label>
                    <input asp-for="@Model.STA"  type="datetime" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label >STD:</label>
                    <input asp-for="@Model.STD" type="datetime" class="form-control w-50" />
                </div>
                <div class="form-group">
                    <label >Booked PAX:</label>
                    <input asp-for="@Model.BookedPax" type="number" class="form-control w-50" />
                </div>
                <button type="submit" class="btn btn-primary w-50">Register flight</button>
            </form>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary float-right btn-lg table-responsive" id="displayButton" onclick="changeDisplayButtonContent()">Display daily</button>
            <table class="table table-bordered table-hover text-center" id="dailyMovements" style="display:none">
                <thead class="thead-dark ">
                    <tr>
                        <th scope="col">Flight Number</th>
                        <th scope="col">A/C Registration</th>
                        <th scope="col">A/C Type</th>
                        <th scope="col">Origin</th>
                        <th scope="col">Destination</th>
                        <th scope="col">STA</th>
                        <th scope="col">STD</th>
                        <th scope="col">Stand</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/js/site.js">

</script>
