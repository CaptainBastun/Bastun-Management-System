
@{
    ViewData["Title"] = "Display passenger data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using BMS.Models.ViewModels.Passengers
@model PassengerOffloadEditViewModel

<div class="container-fluid">
   <form asp-controller="PAX" asp-action="EditPassenger" asp-route-id="@Model.Id">
       <div class="form-group">
           <label>Current first name: <strong>@Model.FirstName</strong></label>
           <input asp-for="@Model.OffloadEditInputModel.FirstName" class="form-control" placeholder="New first name"/>
       </div>
       <div class="form-group">
           <label>Current last name: <strong>@Model.LastName</strong></label>
           <input asp-for="@Model.OffloadEditInputModel.LastName" class="form-control" placeholder="New last name"/>
       </div>
       <div class="form-group">
           <label>Current nationality: <strong>@Model.Nationality</strong></label>
           <input asp-for="@Model.OffloadEditInputModel.Nationality" class="form-control" placeholder="New nationality" />
       </div>
       <div class="form-group">
           <label>Current gender: <strong>@Model.Gender</strong></label>
           <input asp-for="@Model.OffloadEditInputModel.Gender" class="form-control" placeholder="New gender"/>
       </div>
       <div class="form-group">
           <label>Current age: <strong>@Model.Age</strong></label>
           <input asp-for="@Model.OffloadEditInputModel.Age" class="form-control" placeholder="New age"/>
       </div>
       <div class="form-group">
           <label>Current passport number: <strong>@Model.PassportNumber</strong></label>
           <input asp-for="@Model.OffloadEditInputModel.PassportNumber" class="form-control" placeholder="New passport number" />
       </div>
   <div class="form-row">
           <button type="submit" class="btn btn-lg btn-primary w-50">Edit</button>
           <a class="btn btn-lg btn-primary w-50" asp-controller="PAX" asp-action="Offload" asp-route-id="@Model.Id" style="margin-right: -20px">Offload</a>
   </div>
   </form>
</div>