@using BMS.Models
@model BulkLoadingInstructionInputModel
<div class="col">
    <form asp-controller="Operations" asp-action="FileLoadingInstruction" class="justify-content-start">
        <div class="form-row w-50">
            <div id="flightNumberDiv" class="form-group col">
                <input asp-for="@Model.FlightNumber" class="form-control" placeholder="Flight number" />
                <span asp-validation-for="@Model.FlightNumber"></span>
            </div>
        </div>
        <div class="form-group row w-50">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Hold 1</span>
                </div>
                <input asp-for="@Model.HoldOnePieces" class="form-control" />
                <span asp-validation-for="@Model.HoldOnePieces"></span>
            </div>
        </div>
        <div class="form-group row w-50">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Hold 2</span>
                </div>
                <input asp-for="@Model.HoldTwoPieces" class="form-control"/>
                <span asp-validation-for="@Model.HoldTwoPieces"></span>
            </div>
        </div>
        <div class="form-group row w-50">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Hold 3</span>
                </div>
                <input asp-for="@Model.HoldThreePieces" class="form-control w-25"/>
                <span asp-validation-for="@Model.HoldThreePieces"></span>
            </div>
        </div>
        <div class="form-group row w-50">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Hold 4</span>
                </div>
                <input asp-for="@Model.HoldFourPieces" class="form-control w-25"/>
                <span asp-validation-for="@Model.HoldFourPieces"></span>
            </div>
        </div>
        <div class="form-group row w-50">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Hold 5</span>
                </div>
                <input asp-for="@Model.HoldFivePieces" class="form-control w-50"/>
                <span asp-validation-for="@Model.HoldFivePieces"></span>
            </div>
        </div>
        <button id="loadInstructionButton" type="submit" class="btn btn-primary btn-block w-50">Create loading instruction</button>
    </form>
    <form>
    </form>
    <link rel="stylesheet" href="~/css/SetLoadingInstructionDivAndButtonCorrectly.css" />
</div>