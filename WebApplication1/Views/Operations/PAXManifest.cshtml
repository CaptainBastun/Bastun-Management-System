@using BMS.Models;
@model PassengerManifestInputModel
<form asp-controller="Operations" asp-action="GeneratePAXManifest">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <input asp-for="@Model.FlightNumber" class="form-control" placeholder="Flight number"/>
        <span asp-validation-for="@Model.FlightNumber"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Create passenger manifest</button>
</form>