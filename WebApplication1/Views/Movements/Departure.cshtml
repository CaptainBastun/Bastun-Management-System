@{
    this.ViewData["Title"] = "Add departure movement";
}
@using BMS.Models.MovementsInputModels;
@model MovementInputModel

@if (TempData["Error"] != null)
{
    @await Component.InvokeAsync("ErrorAlert", new { message = TempData["Error"] });
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form asp-controller="Movements" asp-action="Departure">
                <div class="form-group">
                    <label>Enter departure movement:</label>
                    <textarea asp-for="@Model.Movement" class="form-control z-depth-1 w-100" rows="7"></textarea>
                    <span asp-validation-for="@Model.Movement"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.OpsEmail"  class="form-control w-100" placeholder="Enter ops email to send movement to"/>
                    <span asp-validation-for="@Model.OpsEmail"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Submit</button>
            </form>
        </div>
    </div>
</div>
