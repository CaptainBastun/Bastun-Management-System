@{ 
    this.ViewData["Departure"] = "DepartureMovement";
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <button id="depBtn" type="button" class="btn btn-primary" onclick="showHideDepMovementBtn()">Display</button>
            <form id="depForm" asp-controller="Movements" asp-action="Departure" style="display:none">
                <div class="form-group">
                    <label for="flightNumber">Enter flight number:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="dateOfDeparture">Enter departure date:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="offBlockTime">Enter off-block time:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="takeoffTime">Enter takeoff time:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="totalPax">Enter total PAX on-board:</label>
                    <input type="number" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="SI">Enter supplementary information</label>
                    <textarea class="form-control w-100" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
        </div>
        <div class="col">
            <button id="ldmBtn" type="button" class="btn btn-primary" onclick="showHideDepLDM()">Display outbound LDM</button>
            <form id="ldmForm" asp-controller="Movements" asp-action="OutboundLDMData" style="display:none">
                <div class="form-group">
                    <label for="outboundLDM">Enter outbound LDM:</label>
                    <textarea class="form-control w-100" rows="3"></textarea>
                </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col">
            <button id="cpmBtn" type="button" class="btn btn-primary" onclick="showHideDepCPM()">Display outbound CPM</button>
            <form id="cpmForm" asp-controller="Movements" asp-action="OutboundCPMData" style="display:none">
                <div class="form-group">
                    <label for="outboundCPM">Enter outbound CPM:</label>
                    <textarea class="form-control w-100" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
             </form>
        </div>
        <div class="col">
            <button id="ucmBtn" type="button" class="btn btn-primary" onclick="showHideDepUCM()">Display outbound UCM</button>
            <form id="ucmForm" class="col" Movements" asp-action="OutboundUCMData" style="display:none">
                <div class="form-group">
                    <label>Enter outbound UCM:</label>
                    <textarea class="form-control w-100" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary ">Submit</button>
            </form>
        </div>
        <div class="col">
            <button id="psmBtn" type="button" class="btn btn-primary" onclick="showHideDepPSM()">Display outbound PSM</button>
            <form id="psmForm" asp-controller="Movements" asp-action="OutboundPSMData" style="display:none">
                <div class="form-group">
                    <label for="outboundPSM">Enter outbound PSM:</label>
                    <textarea class="form-control w-100" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/displayAndRemoveDepButtons.js"></script>