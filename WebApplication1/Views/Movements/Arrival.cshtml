@{ 
    ViewData["Arrival"] = "ArrivalMovement";
}
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form asp-controller="Movements" asp-action="Arrival" id="arrMovementForm" >
                <div class="form-group">
                    <label for="flightNumber">Enter flight number:</label>
                    <input type="text" class="form-control-lg w-100" />
                </div>
                <div class="form-group">
                    <label for="todaysDate">Enter today's date:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="touchdownTime">Enter touchdown time:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="onblockTime">Enter on-block time:</label>
                    <input type="text" class="form-control w-100" />
                </div>
                <div class="form-group">
                    <label for="supplementaryInformation">Enter supplementary information:</label>
                    <textarea class="form-control w-100" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Submit</button>
            </form>
        </div>
    </div>
</div>  
<script src="~/js/displayAndRemoveArrButtons.js">
    
</script>