@{ 
    ViewData["Title"] = "Create arrival movement";
    this.ViewData["InvalidError"] = "maika ti";
}
@using BMS.Models.MovementsInputModels
@model MovementInputModel
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form asp-controller="Movements" asp-action="Arrival">
                <div class="form-group">
                    <div asp-validation-summary="All"></div>
                    <label>Enter arrival movement:</label>
                    <textarea asp-for="@Model.Movement" class="form-control w-100" rows="7"></textarea>
                    <span asp-validation-for="@Model.Movement" class="alert-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Submit</button>
            </form>
        </div>
    </div>
</div>  
